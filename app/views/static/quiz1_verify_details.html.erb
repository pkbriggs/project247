<div class="backdrop smaller_backdrop">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="progress_bar">
        <div class="progress_bar_step active">1</div>
        <hr class="progress_bar_spacer">
        <div class="progress_bar_step">2</div>
        <hr class="progress_bar_spacer">
        <div class="progress_bar_step">3</div>
      </div>
      <div class="progress_bar_step_name cursive_text">
        Basic Information
      </div>
    </div>
  </div>
</div>

<% business_name_placeholder = "" %>
<% address_placeholder = "" %>
<% primary_products_placeholder = "" %>

<% if session[:business_match] %>
  <% business_name_placeholder = session[:possible_match_name] %>
  <% address_placeholder = session[:possible_match_address] %>
<% end %>


<div class="row">
<div class="main_content_container col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
  <p class="serif_text bigger_font_size">Great! We used this listing to fill out some basic info for you. Feel free to make any edits, then hit 'next'.</p>

  <%= form_tag("/quiz1_verify_details") do %>
      <%= label_tag "business_name", "Business Name", class: "block_element serif_text form_label first_form_input_spacing" %>
      <%= text_field_tag "business_name", nil, value: business_name_placeholder, class: "input_field quiz_input_field medium_tall_input_field" %>

      <%= label_tag "address", "Business Address", class: "block_element serif_text form_label form_input_spacing" %>
      <%= text_field_tag "address", nil, value: address_placeholder, class: "input_field quiz_input_field medium_tall_input_field" %>

      <%= label_tag "primary_products", "Primary Products/Services (separate using commas)", class: "block_element serif_text form_label form_input_spacing" %>
      <%= text_field_tag "primary_products", nil, value: primary_products_placeholder, class: "input_field quiz_input_field big_field medium_tall_input_field" %>

      <!-- Average customers per day -->
      <%= label_tag "average_num_daily_customers", "As a rough estimate, how many customers do you serve per day?", class: "block_element form_label serif_text form_input_spacing" %>
      <div>
        <%= radio_button_tag "average_num_daily_customers", "1" %>
        <%= label_tag "average_num_daily_customers_1", "1-10 customers", class: "radio_button_label" %>
      </div>
      <div>
        <%= radio_button_tag "average_num_daily_customers", "2" %>
        <%= label_tag "average_num_daily_customers_2", "11-50 customers", class: "radio_button_label" %>
      </div>
      <div>
        <%= radio_button_tag "average_num_daily_customers", "3" %>
        <%= label_tag "average_num_daily_customers_3", "51-200 customers", class: "radio_button_label" %>
      </div>
      <div>
        <%= radio_button_tag "average_num_daily_customers", "4" %>
        <%= label_tag "average_num_daily_customers_4", "200+ customers", class: "radio_button_label" %>
      </div>
      <div class="small_margin_bottom">
        <%= radio_button_tag "average_num_daily_customers", "0" %>
        <%= label_tag "average_num_daily_customers_0", "This does not apply to my business", class: "radio_button_label" %>
      </div>

      <%= submit_tag "next", class: "block_element button" %>
  <% end %>
</div>
</div>
