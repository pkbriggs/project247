<div class="inner_match_page_top_container">
  <!-- Business image -->
  <div class="inner_match_image_container">
  </div>

  <!-- Business info -->
  <div class="inner_match_content_container">
    <!-- Business details, contact info, etc. -->
    <div class="inner_match_details_container">
      <!-- Name, contact info, and contact button -->
      <div class="name_and_contact_container">
        <div class="name_and_contact_info">
          <h1 class="serif_header_text"><%= session["top_matches_#{@match_number}_name"] %></h1>
          <div class="business_address">
            <i class="fa fa-map-marker"></i>
            <span>123 Main Street, San Francisco, CA, 12345</span>
            <span class="distance_to_business">(4.2mi)</span>
          </div>
          <div class="contact_button">
            <a class="button block_element">contact info</a>
          </div>
        </div>
      </div>

      <div class="description_and_rating_container">
        <p class="description"><%= session["top_matches_#{@match_number}_description"] %></p>
        <div class="yelp_review_container">
          <%= render partial: "static/stars", :locals => {:num => 4, :half_present => true} %>
        </div>
      </div>
    </div>

    <!-- Popular products section -->
    <div class="inner_match_popular_products_outer_container">
      <!-- Popular products -->
      <div class="popular_products_container">
        <h4 class="serif_text popular_products_header">Popular Products</h4>
        <ul class="list-inline">
          <li><%= session["top_matches_#{@match_number}_product_match_1"] %></li>
          <li><%= session["top_matches_#{@match_number}_product_match_2"] %></li>
        </ul>
      </div>

      <!-- Match percentage -->
      <div class="match_percentage_container">
        <div class="match_percentage_number serif_text">98%</div>
        <div class="match_percentage_label serif_text">MATCH</div>
      </div>
    </div>
  </div>
</div>

<div class="hidden_contact_info_container hidden_overlay">
  <div class="contact_info_card">
    <h2 class="serif_header_text no_margin_bottom no_margin_top">Contact Information</h2>
    <div class="serif_text"><%= session["top_matches_#{@match_number}_name"] %></div>
    <div class="business_person_and_phone_and_email">
      <div class="person_info">
        <i class="fa fa-user"></i>
        <span>Elizabeth Star</span>
      </div>

      <div class="phone_info">
        <i class="fa fa-phone"></i>
        <span>(555) 123-4567</span>
      </div>

      <div class="email_info">
        <i class="fa fa-envelope"></i>
        <span>email@business.com</span>
      </div>
    </div>
  </div>
</div>

<div class="container spacer_small">
  <!-- Campaign Suggestions -->
  <div class="row small_margin_bottom">
    <div class="col-md-12">
      <!-- Top Campaigns Suggestions -->
      <h2 class="serif_header_text">Campaign Suggestions</h2>
      <%= render partial: "static/top_campaigns" %>

      <!-- <div class="separator spacer"></div> -->

      <!-- Holiday campaigns -->
      <!-- <h2 class="serif_text">Holiday Themed Campaigns</h2>
      <%# render partial: "static/holiday_campaigns" %> -->

    </div>
  </div>
</div>
