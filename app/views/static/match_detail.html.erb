<div class="inner_match_page_top_container">
  <div class="row no_margin_left no_margin_right">
    <div class="col-md-4 no_padding_left">
      <%= image_tag "business.jpg", class: "img-responsive" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-8">
          <h1 class="serif_text no_margin_bottom"><%= @business_name %></h1>

          <!-- Address Information -->
          <div class="row">
            <div class="col-md-12">
              <ul class="list-inline match_detail">
                  <li class="address address_icon"><i class="fa fa-map-marker"></i></li>
                  <li class="address address_text">650 Mayfield Avenue, Stanford CA 94305</li>
              </ul>
            </div>
          </div>

          <!-- Phone and Address Information -->
          <div class="row">
            <div class="col-md-12">
              <ul class="list-inline match_detail">
                  <li class="phone phone_icon"><i class="fa fa-phone"></i></li>
                  <li class="phone phone_text">(972) 313-6910</li>
                  <li class="email email_icon"><i class="fa fa-envelope"></i></li>
                  <li class="email email_text">contact-me@gmail.com</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <a class="block_element button spacer" href="#">Contact</a>
        </div>
      </div>

      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque leo ante, bibendum at ipsum a, bibendum dictum felis.</p>
      <div class="yelp_review_container">
        <%= render partial: "static/stars", :locals => {:num => 4, :half_present => true} %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row spacer_large">
    <div class="col-md-9">

      <h4 class="serif_text"><b>Popular Products</b></h4>
      <ul class="list-inline">
        <li><%= session["top_matches_#{@match_number}_product_match_1"] %></li>
        <li><%= session["top_matches_#{@match_number}_product_match_2"] %></li>
      </ul>
    </div>
  </div>

  <!-- Campaign Suggestions -->
  <div class="row small_margin_bottom">
    <div class="col-md-12">
      <div class="separator spacer"></div>

      <!-- Top Campaigns Suggestions -->
      <h2 class="serif_text">Campaign Suggestions</h2>
      <%= render partial: "static/top_campaigns" %>

      <!-- <div class="separator spacer"></div> -->

      <!-- Holiday campaigns -->
      <!-- <h2 class="serif_text">Holiday Themed Campaigns</h2>
      <%# render partial: "static/holiday_campaigns" %> -->

    </div>
  </div>
</div>
