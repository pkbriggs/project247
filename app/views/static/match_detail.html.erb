<div class="inner_match_page_top_container">
  <div class="row flex">
    <div class="col-md-4 col-sm-12 no_padding_right flex">
      <div class="business_img"></div>
    </div>
    <div class="col-md-8 col-sm-12 no_padding_left">

      <div class="row content no_padding_bottom">
        <div class="col-md-8">
          <h1 class="no_margin_bottom no_margin_top serif_header_text"><%= @business_name %></h1>

          <!-- Address Information -->
          <div class="row">
            <div class="col-md-12">
              <ul class="list-inline match_detail">
                  <li class="address address_icon"><i class="fa fa-map-marker"></i></li>
                  <li class="address address_text">650 Mayfield Avenue, Stanford CA 94305</li>
              </ul>
            </div>
          </div>

          <!-- Phone and Address Information -->
          <div class="row">
            <div class="col-md-12">
              <ul class="list-inline match_detail">
                  <li class="phone phone_icon"><i class="fa fa-phone"></i></li>
                  <li class="phone phone_text">(972) 313-6910</li>
                  <li class="email email_icon"><i class="fa fa-envelope"></i></li>
                  <li class="email email_text">contact-me@gmail.com</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <a class="block_element button" href="#">contact</a>
        </div>
      </div>

      <div class="content no_padding_top">
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque leo ante, bibendum at ipsum a, bibendum dictum felis.</p>
        <div class="yelp_review_container">
          <%= render partial: "static/stars", :locals => {:num => 4, :half_present => true} %>
        </div>
      </div>

      <!-- Popular Product -->
      <div class="bottom_container content">
        <div class="row">
          <div class="col-md-8">
            <h4 class="serif_text smaller_font_size">Popular Products</h4>
            <ul class="list-inline">
              <li>product #1</li>
              <li>cool product #2</li>
            </ul>
          </div>
          <div class="col-md-4">
            <h3 class="serif_header_text text_centered">98%<br/>Match</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container spacer_small">
  <!-- Campaign Suggestions -->
  <div class="row">
    <div class="col-md-12">
      <!-- Top Campaigns Suggestions -->
      <h2 class="serif_header_text">Campaign Suggestions</h2>
      <h4 class="serif_text">Long Term Campaigns</h4>
      <%= render partial: "static/top_matches" %>

      <!-- Holiday campaigns -->
      <h4 class="serif_text">Holiday Themed Campaigns</h4>
      <%= render partial: "static/holiday_campaigns" %>

    </div>
  </div>
</div>
