<div class="container">
  <div class="row spacer_large">
    <div class="col-md-3">
      <%= image_tag "business.jpg", class: "img-responsive circle" %>
    </div>
    <div class="col-md-9">
      <h1 class="serif_font"><%= session["top_matches_#{@match_number}_name"] %></h1>

      <!-- Address Information -->
      <div class="row">
        <div class="col-md-12">
          <ul class="list-inline match_detail">
              <li class="address"><i class="fa fa-map-marker"></i></li>
              <li class="address">650 Mayfield Avenue, Stanford CA 94305</li>
          </ul>
        </div>
      </div>

      <!-- Phone Information -->
      <div class="row">
        <div class="col-md-12">
          <ul class="list-inline match_detail">
              <li class="phone"><i class="fa fa-phone"></i></li>
              <li class="phone">(972) 313-6910</li>
          </ul>
        </div>
      </div>

      <!-- Email Information -->
      <div class="row">
        <div class="col-md-12">
          <ul class="list-inline match_detail">
              <li class="email"><i class="fa fa-map-marker"></i></li>
              <li class="email">contact-me@gmail.com</li>
          </ul>
        </div>
      </div>

      <h4 class="serif_text"><b>Popular Products</b></h4>
      <ul class="list-inline">
        <li><%= session["top_matches_#{@match_number}_product_match_1"] %></li>
        <li><%= session["top_matches_#{@match_number}_product_match_2"] %></li>
      </ul>
    </div>
  </div>

  <!-- Campaign Suggestions -->
  <div class="row">
    <div class="col-md-12">
      <div class="separator spacer"></div>

      <!-- Top Campaigns Suggestions -->
      <h2 class="serif_text">Campaign Suggestions</h2>
      <%= render partial: "static/top_campaigns" %>

      <div class="separator spacer"></div>

      <!-- Holiday campaigns -->
      <h2 class="serif_text">Holiday Themed Campaigns</h2>
      <%= render partial: "static/holiday_campaigns" %>

    </div>
  </div>
</div>
